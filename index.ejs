    <style>
      :root {
        --theme-color: #9b1c2e;
        --link-color: #9b1c2e;
        --link-color-1: #ba2a45;
        --link-color-2: #7c1624;
        font-size: max(calc(38.2vw / 38), 16px);
      }
      ::selection {
        background-color: var(--theme-color);
        color: white;
      }
      body {
        margin: 0;
        font-family: sans-serif;
      }
      p, h2, h3 {
        line-height: 1.618;
      }
      p {
        text-align: justify;
      }
      h2, h3 {
        text-align: center;
        margin: 1.618em 0 1em;
      }
      h2 {
        font-size: 1.618em;
      }
      h3 {
        font-size: 1em;
      }
      .article-link, footer a {
        text-decoration: none;
        color: var(--link-color);
      }
      @media (hover: hover) {
        .article-link:hover, footer a:hover {
          color: var(--link-color-1);
        }
        .article-link:active, footer a:active {
          color: white;
          background-color: var(--link-color-2);
        }
      }
      footer a:visited {
        color: inherit;
      }
      @media (hover: hover) {
        footer a:visited:active {
          color: white;
        }
      }
      @media (hover: hover) {
        a:not(.button):not(.card-button):active {
          border-radius: .125rem;
        }
      }
      header {
        height: 3.618em;
        padding: 0 1em;
        border-bottom: 1px solid rgba(0, 0, 0, calc(1 - 244 / 255));
        background-color: white;
        transition: top .382s;
        position: sticky;
        border-top: 1px solid rgba(0, 0, 0, calc(1 - 244 / 255));
        top: -1px;
        margin-top: -1px;
      }
      body > header.visible {
        transition: top .382s;
        opacity: 1;
      }
      body:not(.firefox) > header {
        background-color: rgba(255, 255, 255, .7);
        -webkit-backdrop-filter: saturate(180%) blur(20px);
        backdrop-filter: saturate(180%) blur(20px);
      }
      .hide-header > header {
        transition: top .382s, opacity .382s .382s;
        top: calc(-3.618em - 2px);
        opacity: 0;
      }
      nav > ul {
        display: flex;
        flex-direction: row;
        align-items: center;
        list-style: none;
        padding: 0;
      }
      nav > ul > * {
        margin-left: 1.618em;
        line-height: 1;
      }
      nav > ul > *:first-child {
        margin-left: 0;
      }
      main {
        max-width: 38rem;
        margin: 0 auto;
      }
      .header-inner {
        max-width: calc(38rem / .618);
        margin: 0 auto;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .header-title {
        margin: 0;
      }
      .header-title a {
        color: inherit;
        text-decoration: none;
        padding-left: 2.42165rem;
        line-height: 3.618rem;
        height: 3.618rem;
        font-size: 1.618rem;
        display: inline-block;
        font-style: italic;
        font-weight: bold;
        position: relative;
      }
      .header-title a svg {
        width: 2.618rem;
        height: 2.618rem;
        position: absolute;
        left: -0.19635rem;
        top: 0;
        bottom: 0;
        margin: auto 0;
        pointer-events: none;
      }
      .link {
        color: #9b1c2e;
        text-decoration: none;
      }
      .link:visited {
        color: inherit;
      }
      .linkbutton {
        background-color: #9b1c2e;
        text-decoration: none;
        color: #fff;
        border-radius: .309em;
        padding: .236em .382em;
      }
      .inline-button {
        margin-top: -.382em;
      }
      .button {
        background-color: #9b1c2e;
        color: #fff;
        text-decoration: none;
        padding: .382em;
        border-radius: .309em;
        display: inline-block;
        line-height: 1;
      }
      @media (hover: hover) {
        .button:active, .card-button:active {
          background-color: #7c1624;
        }
      }
      main {
        padding: 3.618rem 1.618rem 0;
      }

      .download {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .download-logo-wrapper {
        margin-bottom: 2.618em;
        display: flex;
        align-items: center;
        height: 8.75rem;
        user-select: none;
        -webkit-tap-highlight-color: transparent;
      }
      .download-logo-wrapper > * {
        pointer-events: none;
      }
      .download-logo-wrapper svg {
        width: 12.5rem;
        height: 12.5rem;
        vertical-align: middle;
      }
      .download-title {
        font-size: 2.618rem;
        margin: 0 -.618rem 1.618rem;
        line-height: 1;
      }
      .download-subtitle {
        font-size: 1.618rem;
        margin: 0;
        line-height: 1;
      }
      .mobile-break-line {
        display: none;
      }
      @media screen and (max-width: 440px) {
        .download-title {
          font-size: 1.618rem;
        }
        .download-subtitle {
          font-size: 1rem;
        }
        .mobile-break-line {
          display: inline;
        }
      }
      @media screen and (max-width: 360px) {
        .hidden-360 {
          display: none;
        }
      }
      .card-button {
        background-color: #9b1c2e;
        color: #fff;
        text-decoration: none;
        display: inline-block;
        padding: 1em 1.618em;
        line-height: 1;
        border-radius: 1.309rem;
        background-repeat: no-repeat;
        background-position: center 1em;
        background-size: auto 2em;
        box-sizing: border-box;
        width: 8.235625rem;
      }
      .card-button.download:before {
        content: '下载';
        display: block;
        font-weight: bold;
        margin-bottom: 0.618em;
      }
      .card-button.icon {
        padding-top: 3.618em;
      }
      .card-button.download {
        padding-top: 4.618em;
        background-size: 2.618em;
      }
      .card-button.android {
        background-image: url("imgs/android.svg");
      }
      .card-button.windows {
        background-image: url("imgs/windows.svg");
      }
      .card-button.macos {
        background-image: url("imgs/apple.svg");
      }
      .card-button.linux {
        background-image: url("imgs/linux.svg");
      }
      .card-button.binance {
        background-image: url("imgs/binance.svg");
      }
      .card-button.aex {
        background-image: url("imgs/aex.svg");
      }
      .card-button.huobi {
        background-image: url("imgs/huobi.svg");
      }
      .card-button.firodex {
        background-image: url("imgs/logo-whitebg.svg");
      }
      .card-button {
        margin: 0 .5em;
      }
      .card-list {
        margin: 1.618em 0 1.309em;
        padding: 0;
        list-style: none;
      }
      .card-list li {
        margin-top: 1em;
        display: inline-block;
      }
      footer {
        text-align: center;
        margin: 2.927rem 0 1.618rem;
        font-size: .618em;
      }
      footer > p {
        text-align: center;
        line-height: 1;
      }
      section, section p {
        text-align: center;
      }

      #exchanges {
        list-style: none;
        padding: .309em 0;
        margin-top: -1em;
      }
      #exchanges li {
        display: inline-block;
        margin-top: 1em;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          background-color: black;
        }
        body {
          color: #fff;
        }
        header {
          background-color: black;
          border-color: rgba(255, 255, 255, calc(1 - 244 / 255)) !important;
        }
        body:not(.firefox) > header {
          background-color: rgba(0, 0, 0, .7);
        }
      }

      .rotate {
        animation: rotate .618s;
      }
      @keyframes rotate {
        from { transform: rotate(0); }
        to { transform: rotate(-1080deg); }
      }

      .button-list {
        list-style: none;
        padding: .309em 0;
        margin-top: -1rem;
      }
      .button-list li {
        display: inline-block;
        margin-top: 1rem;
      }
      .button-list li:not(:first-child) {
        margin-left: 1rem;
      }
      .button-list .button {
        padding: .618em;
      }
    </style>
    <noscript>
      <style>
        body > header {
          position: static;
        }
        .show-header .posts-icon {
          top: 1.618rem;
        }
      </style>
    </noscript>
    <script>
      window.siteURL = '<%= siteURL %>'
      window.siteDomain = '<%= siteDomain %>'
    </script>
  </head>
  <body>
