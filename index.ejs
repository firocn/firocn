    <script>
      ;(function () {
        const logoWrapper = document.querySelector('#logo_wrapper')
        logoWrapper.addEventListener('click', e => {
          e.currentTarget.classList.add('rotate')
        })
        logoWrapper.addEventListener('animationend', e => {
          e.currentTarget.classList.remove('rotate')
        })
      })()

      ;(function () {
        const introducingFiro = document.querySelector('#introducing_firo')
        const checkbox = document.querySelector('#checkbox_introducing_firo')

        introducingFiro.addEventListener('playing', e => {
          onUIUpdated()
          e.target.style.backgroundColor = 'initial'
        })
        introducingFiro.addEventListener('timeupdate', e => {
          const video = e.target
          if (video.duration - video.currentTime <= 0) checkbox.checked = false
        })

        checkbox.addEventListener('change', e => {
          if (!e.target.checked) return
          introducingFiro.poster = null
          introducingFiro.style.backgroundColor = 'black'
          introducingFiro.play()
          onUIUpdated()
          requestAnimationFrame(() => {
            const windowWidth = window.innerWidth
            const windowHeight = window.innerHeight
            const rect = introducingFiro.getBoundingClientRect()
            const top = (window.pageYOffset + rect.top) - (windowHeight - rect.height) * 0.382
            window.scrollTo({ top, behavior: 'smooth' })
            document.body.classList.remove('show-header')
            document.body.classList.add('hide-header')
          })
        })
